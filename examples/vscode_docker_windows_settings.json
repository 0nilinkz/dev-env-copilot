{
  "github.copilot.chat.experimental.mcp": {
    "enabled": true,
    "servers": {
      "dev-env-copilot-docker-windows": {
        "command": "docker",
        "args": [
          "run",
          "--rm",
          "--interactive",
          "--volume",
          "${workspaceFolder}:/workspace:ro",
          "--volume",
          "C:\\Users\\${env:USERNAME}\\AppData\\Local\\dev-env-copilot:/home/mcp-user/.config:ro",
          "dev-env-copilot:latest"
        ],
        "env": {
          "DOCKER_BUILDKIT": "1",
          "DOCKER_HOST": "npipe:////./pipe/docker_engine"
        },
        "initializationOptions": {
          "workspaceFolder": "/workspace",
          "platform": "windows"
        }
      }
    }
  },
  "github.copilot.chat.experimental.tools": [
    {
      "name": "detect_environment",
      "description": "Detect Windows development environment via Docker",
      "server": "dev-env-copilot-docker-windows"
    },
    {
      "name": "get_powershell_syntax",
      "description": "Get PowerShell command syntax for Windows",
      "server": "dev-env-copilot-docker-windows"
    }
  ]
}