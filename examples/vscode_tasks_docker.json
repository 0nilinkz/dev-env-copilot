{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Env Copilot (Docker)",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "dev-env-copilot-task",
        "dev-env-copilot-test"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Stop Dev Env Copilot (Docker)",
      "type": "shell",
      "command": "docker",
      "args": [
        "stop",
        "dev-env-copilot-task"
      ],
      "group": "build"
    }
  ]
}