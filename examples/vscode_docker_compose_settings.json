{
  "github.copilot.chat.experimental.mcp": {
    "enabled": true,
    "servers": {
      "dev-env-copilot-docker-compose": {
        "command": "docker-compose",
        "args": [
          "-f",
          "${workspaceFolder}/../dev-env-copilot/docker-compose.yml",
          "run",
          "--rm",
          "--volume",
          "${workspaceFolder}:/workspace:ro",
          "dev-env-copilot"
        ],
        "env": {
          "COMPOSE_PROJECT_NAME": "dev-env-copilot"
        },
        "initializationOptions": {
          "workspaceFolder": "/workspace"
        }
      }
    }
  },
  "github.copilot.chat.experimental.tools": [
    {
      "name": "detect_environment",
      "description": "Detect current OS and development environment",
      "server": "dev-env-copilot-docker-compose"
    },
    {
      "name": "get_command_syntax",
      "description": "Get correct terminal command syntax",
      "server": "dev-env-copilot-docker-compose"
    }
  ]
}