{
  "github.copilot.chat.experimental.mcp": {
    "enabled": true,
    "servers": {
      "dev-env-copilot-windows": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "--platform",
          "linux/amd64",
          "dev-env-copilot-test"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "DOCKER_HOST": "npipe:////./pipe/docker_engine"
        }
      }
    }
  }
}